<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/poppingPurpleButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fancyShmancyBlueButton"
        android:layout_below="@+id/fancyShmancyBlueButton"
        android:layout_marginTop="37dp"
        android:text="@string/poppingPurpleText" />

    <Button
        android:id="@+id/mellowYellowButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wickedGreenButton"
        android:layout_alignTop="@+id/poppingPurpleButton"
        android:text="@string/mellowYellowText" />

    <Button
        android:id="@+id/bloodRedButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/poppingPurpleButton"
        android:layout_below="@+id/poppingPurpleButton"
        android:layout_marginTop="44dp"
        android:text="@string/bloodRedText" />

    <Button
        android:id="@+id/nothingRhymesWithThisOrangeButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mellowYellowButton"
        android:layout_alignTop="@+id/bloodRedButton"
        android:text="@string/nothingRhymesWithThisOrangeText" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="@string/appLabel" />

    <Button
        android:id="@+id/fancyShmancyBlueButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="76dp"
        android:text="@string/fancyShmancyBlueText"
        android:textColor="@id/fancyShmancyBlueButton" />

    <Button
        android:id="@+id/wickedGreenButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/poppingPurpleButton"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/fancyShmancyBlueButton"
        android:text="@string/wickedGreenText" />

</RelativeLayout>